<h1>Editing Book</h1>
<%= form_with model: @book,method: :patch do |f| %>


  <% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<div class="field">
  <label>Title</label>
  <%= f.text_field :title %>
</div>  
  
  
<div class="field">
  <label>Body</label>
  <%= f.text_area :body %>
</div>  
  

<div class="actions">  
  <%= f.submit 'Update Book' %>
</div>

<% end %> 

<tbody>
<tr>
 <td><%= link_to "Edit", edit_book_path(@book.id) %>
  |
  <%= link_to "Back", books_path %>
 </td>
</tr>
</tbody>

